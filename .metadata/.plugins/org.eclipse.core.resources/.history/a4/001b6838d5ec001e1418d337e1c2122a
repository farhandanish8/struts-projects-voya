<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
          "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="default" extends="struts-default">
		<global-results>
			<result name="exception">/techerror.jsp</result>
			<result name="error">/error.jsp</result>
		</global-results>
		
		<global-exception-mappings>
		<exception-mapping result="exception" exception="java.lang.Exception"></exception-mapping>
		<exception-mapping result="error" exception="java.Lang.NullPointerException"></exception-mapping>
		</global-exception-mappings>
		<action name="">
			<result>/index.jsp</result>
		</action>

		<action name="show" class="com.struts.action.EmployeeAction">
			<result name="success">/welcome.jsp</result>
			<result name="error">/index.jsp</result>
			<result name="exception">/WEB-INF/content/error.jsp</result>
			<exception-mapping result="techerror"
				exception="java.Lang.NullPointerException"></exception-mapping>
		</action>
	</package>
</struts>